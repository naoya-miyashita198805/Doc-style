<% if document.document.bookmark_by?(current_user) %> 
  <%= link_to icon('fas', 'star'), document_bookmarks_path(document.document.id), method: :delete, id: :"js-bookmark-button-for-document-#{document.document.id}" %>
<% else %>
  <%= link_to icon('far', 'star'), document_bookmarks_path(document.document.id), method: :post, id: :"js-bookmark-button-for-document-#{document.document.id}" %>
<% end %>